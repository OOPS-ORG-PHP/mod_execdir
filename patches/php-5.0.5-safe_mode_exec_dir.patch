+		tmp = estrdup (cmd);
+		b = strrchr (tmp, '/');
+
+		if ( c ) *c = ' ';
+
+		if ( b )
+			c_len = sizeof (char *) * (strlen (b) + c_len + 1);
+		else
+			c_len = sizeof (char *) * (strlen (tmp) + c_len + 1);
+
+		__cmd = emalloc (c_len);
+		memset (__cmd, 0, c_len);
+		if ( c )
+			sprintf (__cmd, "%s%s", b ? b : tmp, c);
+		else {
+			if ( b )
