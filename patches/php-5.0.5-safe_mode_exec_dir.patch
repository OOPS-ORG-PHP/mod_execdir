+	if ( exec_len ) {
+		char *b = NULL, *c = NULL;
+		char *tmp;
+		char *__cmd;
+		size_t c_len = 0;
+
+		c = strchr (cmd, ' ');
+		if ( c ) {
+			c_len = strlen (c);
+			*c = 0;
+		}
+
+		//php_printf ("g --> %s : %s : %s : '%c'\n", c, b, PG(safe_mode_exec_dir), PHP_DIR_SEPARATOR);
+		//php_printf ("g ==> %s\n", cmd);
